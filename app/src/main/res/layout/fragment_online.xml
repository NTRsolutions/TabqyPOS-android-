<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/background"
    tools:context=".fragments.nav.OnlineFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="@dimen/nav1_width"
        android:layout_height="@dimen/nav1_width"
        android:id="@+id/nav_menu"
        android:background="@color/colorPrimary">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_menu" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_60"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="@color/colorWhite">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_gravity="center"
                        android:layout_height="@dimen/size_50"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:theme="@style/ThemeOverlay.AppCompat.Dark">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:contentDescription="@string/nav_header_desc"
                            app:srcCompat="@drawable/profile_new"
                            android:layout_alignParentLeft="true"
                            android:layout_centerInParent="true"/>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/imageView">

                            <com.pos.user.tabqy.customtext.CustomTextView
                                android:id="@+id/txt_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vaibhav Khandelwal"
                                android:textSize="@dimen/size_10"
                                android:textColor="@color/colorBlack" />
                            <com.pos.user.tabqy.customtext.CustomTextView
                                android:id="@+id/txt_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/txt_name"
                                android:layout_marginTop="5dp"
                                android:text="2QK8346H8"
                                android:textSize="@dimen/size_9"
                                android:textColor="@color/color_lightgreytext" />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img_notification"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="10dp"
                                android:contentDescription="@string/nav_header_desc"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                android:src="@drawable/ic_notification" />

                            <ImageView
                                android:id="@+id/img_logout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="15dp"
                                android:layout_toRightOf="@+id/img_notification"
                                android:contentDescription="@string/nav_header_desc"
                                android:paddingTop="@dimen/nav_header_vertical_spacing"
                                android:src="@drawable/ic_logout" />

                        </LinearLayout>

                    </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="@dimen/size_5">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorWhite"
            android:padding="@dimen/size_10">
            
            <com.pos.user.tabqy.customtext.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Life Time Order: 2567"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/size_12"
                android:gravity="center"
                android:layout_alignParentLeft="true" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical">

                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Filter by"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_12"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/size_10"
                    android:layout_alignParentLeft="true"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/cash"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_9"
                    android:gravity="center"
                    android:background="@drawable/shape_background_bg"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_alignParentLeft="true"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/credit_card"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_9"
                    android:gravity="center"
                    android:background="@drawable/shape_background_bg"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_alignParentLeft="true"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/date"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_9"
                    android:gravity="center"
                    android:background="@drawable/shape_background_bg"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_alignParentLeft="true"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/month"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_9"
                    android:gravity="center"
                    android:background="@drawable/shape_background_bg"
                    android:layout_marginRight="@dimen/size_3"
                    android:layout_alignParentLeft="true"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/year"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_9"
                    android:gravity="center"
                    android:background="@drawable/shape_background_bg"
                    android:layout_alignParentLeft="true"/>

            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="@dimen/size_5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fragment_online_online_status_one"
                android:gravity="center_vertical"
                android:background="@drawable/shape_border_pink"
                android:orientation="horizontal"
                android:layout_marginRight="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/new_orders"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_10"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_8"
                    android:background="@drawable/shape_background_pink"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fragment_online_online_status_two"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/waiting_for_pick"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_10"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_8"
                    android:background="@drawable/shape_background_light_green"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fragment_online_online_status_three"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery_in_progress"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_10"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_8"
                    android:background="@drawable/shape_background_light_green"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/fragment_online_online_status_four"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_marginRight="35dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/delivery"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_10"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/size_8"
                    android:background="@drawable/shape_background_dark_green"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingTop="3dp"
                    android:paddingBottom="3dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp" />

            </LinearLayout>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/colorWhite"
                android:padding="@dimen/size_5"
                android:orientation="horizontal">

                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/information"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_12"
                    android:gravity="center_vertical"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/order_number"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/size_12"
                    android:gravity="center_vertical"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/order_taken_at"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/elapsed_time"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"
                    android:text="@string/amount"
                    android:gravity="center_vertical"/>
                <com.pos.user.tabqy.customtext.CustomTextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/deliver_to"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>
                <com.pos.user.tabqy.customtext.CustomTextViewBold
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:text="I"
                    android:textSize="@dimen/size_12"
                    android:textColor="@color/colorBlack"
                    android:gravity="center_vertical"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/size_5">
        </LinearLayout>

    </LinearLayout>


</LinearLayout>