<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="260dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/logo" />

            <LinearLayout
                android:id="@+id/number_buttons"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo"
                android:orientation="vertical">


                <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="Enter the PIN of manager or administrator "
                    android:textSize="@dimen/extra_small_size" />


                <LinearLayout
                    android:layout_width="600dp"
                    android:layout_height="250dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorLightGrey"
                    android:orientation="vertical"
                    android:padding="1dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="1" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="2" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="3" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="4" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="5" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="6" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="7" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="8" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="9" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_marginBottom="1dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:textColor="@color/colorBlack" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="1dp"
                                android:layout_marginRight="1dp"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="0" />

                            <com.askonlinesolutions.user.tabqy.customtext.CustomTextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorWhite"
                                android:gravity="center"
                                android:text="Clear" />
                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_okay"
                android:layout_marginTop="@dimen/margin_button_top_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/number_buttons"
                android:layout_marginLeft="@dimen/button_left"
                android:layout_marginRight="@dimen/button_right"
                android:background="@drawable/back_buttongrey"
                android:text="@string/txtOk"
                android:layout_marginBottom="50dp"
                android:textColor="@color/colorWhite" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>